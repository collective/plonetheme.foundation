<?xml version="1.0"?>

<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="plonetheme.foundation">

 <object name="plonetheme_foundation_custom"
    meta_type="Filesystem Directory View"
    directory="plonetheme.foundation:skins/plonetheme_foundation_custom"/>

 <skin-path name="plonetheme.foundation" based-on="Plone Default">
  <layer name="plonetheme_foundation_custom" insert-after="custom"/>
  <layer name="referencebrowser" remove="True"/>
  <layer name="tinymce" remove="True"/>
  <layer name="archetypes" remove="True"/>
  <layer name="archetypes_kss" remove="True"/>
  <layer name="ATContentTypes" remove="True"/>
  <layer name="plone_content" remove="True"/>
  <layer name="plone_ecmascript" remove="True"/>
  <layer name="plone_styles" remove="True"/>
  <layer name="plone_images" remove="True"/>
  <layer name="plone_3rdParty" remove="True"/>
  <layer name="cmf_legacy" remove="True"/>
 </skin-path>

 <skin-path name="plonetheme.foundationdesk" based-on="plonetheme.foundation">
  <layer name="referencebrowser" remove="True"/>
  <layer name="tinymce" remove="True"/>
  <layer name="archetypes" remove="True"/>
  <layer name="archetypes_kss" remove="True"/>
  <layer name="ATContentTypes" remove="True"/>
  <layer name="plone_content" remove="True"/>
  <layer name="plone_ecmascript" remove="True"/>
  <layer name="plone_styles" remove="True"/>
  <layer name="plone_images" remove="True"/>
  <layer name="plone_3rdParty" remove="True"/>
  <layer name="cmf_legacy" remove="True"/>
 </skin-path>

</object>
